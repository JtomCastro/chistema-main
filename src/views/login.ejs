<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <title>Iniciar Sesión - Sistema de Ventas Alex</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Google reCAPTCHA -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <style>
      body {
        background: #f3f4f6;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        padding: 1rem;
      }
      .login-box {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        box-sizing: border-box;
      }
      .logo {
        font-size: 1.8rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 1rem;
        color: #198754;
        user-select: none;
      }
      /* Que el botón ocupe todo el ancho siempre */
      button[type="submit"] {
        font-weight: 600;
      }
      /* Margen entre reCAPTCHA y botones */
      .g-recaptcha {
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="login-box">
      <div class="logo">🔐 Sistema de Ventas Alex</div>

      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Correo electrónico</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            placeholder="xxxxxx@correo.com"
            required
          />
        </div>

        <div class="mb-3">
          <label for="contrasena" class="form-label">Contraseña</label>
          <input
            type="password"
            class="form-control"
            name="contrasena"
            id="contrasena"
            placeholder="********"
            required
          />
        </div>

        <% if (typeof intentos !== 'undefined' && intentos >= 3) { %>
        <div
          class="g-recaptcha"
          data-sitekey="6LdwlXsrAAAAAOQA0NmqcprHNRT3zQah7VGUa6YE"
        ></div>
        <% } %>

        <button type="submit" class="btn btn-success w-100">
          Iniciar Sesión
        </button>
      </form>

      <hr />

      <div class="text-center">
        <p class="text-muted">¿No tienes cuenta?</p>
        <a href="/registrar" class="btn btn-outline-primary w-100">
          Registrarse
        </a>
      </div>

      <p class="text-center mt-3 text-muted">
        ¿Olvidaste tu contraseña? Contacta al administrador.
      </p>
    </div>

    <script>
      const params = new URLSearchParams(window.location.search);

      if (params.get("error") === "1") {
        Swal.fire("Error", "Correo o contraseña incorrectos", "error");
      } else if (params.get("captcha") === "empty") {
        Swal.fire("Captcha requerido", "Marca 'No soy un robot'", "warning");
      } else if (params.get("captcha") === "fail") {
        Swal.fire("Captcha inválido", "Verificación fallida", "error");
      } else if (params.get("captcha") === "error") {
        Swal.fire("Error", "Error al verificar el captcha", "error");
      } else if (params.get("bloqueo") === "1") {
        Swal.fire(
          "Acceso bloqueado",
          "Demasiados intentos. Intenta más tarde.",
          "warning"
        );
      } else if (params.get("pendiente") === "1") {
        Swal.fire(
          "Cuenta pendiente",
          "Tu cuenta está pendiente de activación por el administrador.",
          "info"
        );
      }
    </script>
  </body>
</html>
