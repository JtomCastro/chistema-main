<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Historial de Ventas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
    }

    .table-responsive {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    /* Responsive para móviles */
    @media (max-width: 767.98px) {
      .container {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
      }

      table.table thead th,
      table.table tbody td {
        white-space: nowrap;
        text-align: left !important;
      }

      /* Botones en columna Detalle se apilan */
      td.text-center.d-flex.justify-content-center.gap-2 {
        flex-direction: column !important;
        gap: 0.4rem !important;
        align-items: stretch;
      }

      td.text-center.d-flex.justify-content-center.gap-2 > * {
        width: 100% !important;
      }

      .btn-sm {
        font-size: 0.95rem;
        padding: 0.5rem 0.75rem;
      }
    }
  </style>
</head>

<body class="bg-light">
  <div class="container mt-5">
    <% if (rol === 'admin') { %>
      <button class="btn btn-warning mb-3" disabled>
        <i class="bi bi-person-badge-fill me-1"></i> Administrador
      </button>
    <% } else if (rol === 'cajero') { %>
      <button class="btn btn-primary mb-3" disabled>
        <i class="bi bi-person me-1"></i> Cajero
      </button>
    <% } %>

    <!-- Mensajes -->
    <% if (mensajeExito) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= mensajeExito %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% } %>
    <% if (mensajeError) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= mensajeError %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% } %>

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
      <h2 class="text-primary mb-0"><i class="bi bi-clock-history"></i> Historial de Ventas</h2>
      <a href="/deshboard" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Volver al Panel
      </a>
    </div>

    <!-- Filtros -->
    <form method="GET" action="/historial-ventas" class="row g-3 mb-4">
      <div class="col-md-3 col-6">
        <label for="fecha_inicio" class="form-label">Desde</label>
        <input type="date" class="form-control" id="fecha_inicio" name="fecha_inicio" value="<%= filtro.fecha_inicio || '' %>">
      </div>
      <div class="col-md-3 col-6">
        <label for="fecha_fin" class="form-label">Hasta</label>
        <input type="date" class="form-control" id="fecha_fin" name="fecha_fin" value="<%= filtro.fecha_fin || '' %>">
      </div>
      <div class="col-md-2 col-6">
        <label for="comprobante" class="form-label">Comprobante</label>
        <select class="form-select" id="comprobante" name="comprobante">
          <option value="">Todos</option>
          <option value="boleta" <%= filtro.comprobante === 'boleta' ? 'selected' : '' %>>Boleta</option>
          <option value="factura" <%= filtro.comprobante === 'factura' ? 'selected' : '' %>>Factura</option>
        </select>
      </div>
      <div class="col-md-2 col-6">
        <label for="estado" class="form-label">Estado</label>
        <select class="form-select" id="estado" name="estado">
          <option value="">Todos</option>
          <option value="activa" <%= filtro.estado === 'activa' ? 'selected' : '' %>>Activa</option>
          <option value="anulada" <%= filtro.estado === 'anulada' ? 'selected' : '' %>>Anulada</option>
          <option value="devuelta" <%= filtro.estado === 'devuelta' ? 'selected' : '' %>>Devuelta</option>
        </select>
      </div>
      <div class="col-md-3 col-6">
        <label for="nombre_cliente" class="form-label">Cliente</label>
        <input type="text" class="form-control" id="nombre_cliente" name="nombre_cliente" placeholder="Ej. Juan Pérez" value="<%= filtro.nombre_cliente || '' %>">
      </div>
      <div class="col-md-2 col-6 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">
          <i class="bi bi-search"></i> Filtrar
        </button>
      </div>
    </form>

    <!-- Tabla -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover bg-white">
        <thead class="table-dark text-center">
          <tr>
            <th>Código</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Comprobante</th>
            <th>Cliente</th>
            <th>Cajero</th>
            <th>Total (S/)</th>
            <th>Pago</th>
            <th>Estado</th>
            <th>Detalle</th>
          </tr>
        </thead>
        <tbody>
          <% if (ventas.length > 0) { %>
            <% ventas.forEach(v => { %>
              <tr>
                <td><%= v.codigo_venta %></td>
                <td><%= v.fecha %></td>
                <td><%= v.hora %></td>
                <td><%= v.tipo_comprobante %></td>
                <td><%= v.cliente_nombre %></td>
                <td><%= v.cajero_nombre %></td>
                <td class="text-end"><%= Number(v.total).toFixed(2) %></td>
                <td><%= v.forma_pago %></td>
                <td>
                  <span class="badge bg-<%= v.estado === 'activa' ? 'success' : (v.estado === 'anulada' ? 'danger' : 'warning') %>">
                    <%= v.estado %>
                  </span>
                </td>
                <td class="text-center d-flex justify-content-center gap-2">
                  <a href="/ventas/verPreboleta/<%= v.codigo_venta %>" class="btn btn-sm btn-outline-info">
                    <i class="bi bi-eye"></i> Ver
                  </a>

                  <% if (rol === 'admin') { %>
                    <form action="/ventas/eliminar/<%= v.codigo_venta %>" method="POST" onsubmit="return confirm('¿Estás seguro que deseas eliminar esta venta?');">
                      <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Eliminar
                      </button>
                    </form>
                  <% } else { %>
                    <button type="button" class="btn btn-sm btn-secondary" disabled title="No tienes permiso">
                      <i class="bi bi-trash"></i> Eliminar
                    </button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="10" class="text-center text-muted">No hay ventas registradas con los filtros aplicados.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
