<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <title>Registro de Usuario</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: #e9ecef;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 1rem;
        box-sizing: border-box;
      }
      .register-box {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        box-sizing: border-box;
      }
      /* Para que los botones ocupen todo el ancho */
      button,
      .btn-link {
        font-weight: 600;
      }
      /* Espacio entre botones */
      .btn-link {
        margin-top: 0.5rem;
        display: block;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="register-box">
      <h3 class="text-center mb-4">游닇 Registro de Usuario</h3>

      <form action="/registro" method="POST" novalidate>
        <!-- Campo DNI -->
        <div class="mb-3">
          <label for="dni" class="form-label">DNI</label>
          <input
            type="text"
            class="form-control"
            id="dni"
            name="dni"
            maxlength="8"
            placeholder="Ingrese su DNI"
            pattern="\d{8}"
            title="El DNI debe tener 8 n칰meros"
            required
          />
        </div>

        <!-- Nombre de usuario -->
        <div class="mb-3">
          <label for="nombre_usuario" class="form-label"
            >Nombre de usuario</label
          >
          <input
            type="text"
            class="form-control"
            id="nombre_usuario"
            name="nombre_usuario"
            placeholder="Nombre de usuario"
            required
          />
        </div>

        <!-- Correo electr칩nico -->
        <div class="mb-3">
          <label for="email" class="form-label">Correo electr칩nico</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="ejemplo@correo.com"
            required
          />
        </div>

        <!-- Contrase침a -->
        <div class="mb-3">
          <label for="contrasena" class="form-label">Contrase침a</label>
          <input
            type="password"
            class="form-control"
            id="contrasena"
            name="contrasena"
            placeholder="********"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary w-100">Registrar</button>
        <a href="/login" class="btn btn-link w-100">Volver al login</a>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
